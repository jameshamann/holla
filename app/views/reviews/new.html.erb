<div class="container">
  <h2>Add review</h2>

  <%= form_for [@restaurant, @review] do |r| %>
    <div class="form-group row">
      <label for="rating" class="col-xs-2 col-form-label"><%= r.label :rating %></label>
      <div class="col-xs-10" id="name">
        <%= r.select(:rating, (1..5))%>
      </div>
    </div>

    <div class="form-group row">
      <label for="comment" class="col-xs-2 col-form-label"><%= r.label :comment %></label>
      <div class="col-xs-10" id="comment">
        <%= r.text_area(:comment, rows: 5, class: "form-control", placeholder: "Add your comments here") %>
      </div>
    </div>

    <%= r.submit(class: "btn btn-primary") %>
    <%= link_to "Cancel", restaurant_path(@restaurant) %>
  <% end %>

</div>
