<%= form_for [@restaurant, @review] do |r| %>
  <%= r.label :rating %>
  <%= r.select :rating, (1..5) %>
  <%= r.label :comment %>
  <%= r.text_field(:comment) %>
  <%= r.submit %>
<% end %>


<%= link_to "Delete review", restaurant_review_path(@restaurant, @review), method: :delete %>

